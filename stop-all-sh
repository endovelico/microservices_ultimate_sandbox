#!/bin/bash
# File: stop-all.sh
# Place this in the root of your project

set -e  # Exit on any error

echo "==============================="
echo "üõë Stopping all Docker containers..."
echo "==============================="

# Stop all running Docker containers
docker stop $(docker ps -q) 2>/dev/null || echo "No running Docker containers."

# Optionally remove all containers
docker rm $(docker ps -aq) 2>/dev/null || echo "No Docker containers to remove."

echo "==============================="
echo "‚ò∏Ô∏è  Stopping all Kubernetes pods..."
echo "==============================="

# Replace <namespace> with your K8s namespace, or omit -n <namespace> for default
NAMESPACE="default"

kubectl delete pods --all -n $NAMESPACE || echo "No pods to delete in namespace $NAMESPACE"

echo "==============================="
echo "‚úÖ All Docker and Kubernetes containers/pods stopped!"
echo "==============================="
